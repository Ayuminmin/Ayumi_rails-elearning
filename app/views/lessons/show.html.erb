 <div class="cantainer">   
    <div class="row">
        <div class="col-lg-6 offset-2 mt-4">
            <div class="card" style="width: 40rem;">
                <div class="card-header">
                    <%= @lesson.category.title %>
                </div>
                <div>
                    <h3 class="text-center">Result <%= @lesson.choices.where(correct: true).count %>/<%= @lesson.choices.count %></h3>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Word</th>
                            <th>CorrectAnswer</th>
                            <th>Answer</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @lesson.answers.each do |answer| %>
                            <tr>
                                <td><%= answer.word.content %></td>
                                <td><%= answer.word.choices.where(correct: true).first.content %></td>
                                <td><%= answer.choice.content %></td>
                                <td>
                                    <% if answer.word.choices.find_by(correct: true).content == answer.choice.content %>
                                        <i class="fas fa-check"></i>
                                    <% else %>
                                        <i class="fas fa-times"></i>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>