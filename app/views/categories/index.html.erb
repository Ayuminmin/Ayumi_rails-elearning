<div class="row">
    <div class="col-sm-6">
        <% @categories.each do |category| %>
            <div class="card m-3">
                <div class="card-body">
                    <%= category.title %>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        <% if @learned.include?(category) %>
                            <%= link_to "Show Result", lesson_path(category) ,class: 'btn btn-secondary float-right' %>
                        <% else %>
                            <%= form_for @lesson do |f| %>
                            <%= hidden_field_tag :category_id, category.id %>
                            <%= f.submit "Let's Start!", class: 'btn btn-info float-right' %>
                            <% end %>
                        <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>