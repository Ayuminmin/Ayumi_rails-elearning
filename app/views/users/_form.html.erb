<%= form_for @user do |f| %>
    <%= render 'shared/errors_messages', object: f.object %>
    <div class="form-group text-light">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your name' %>
    </div>
    <div class="form-group text-light">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email'%>
    </div>
    <div class="form-group text-light">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password'%>
    </div>
    <div class="form-group text-light">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password_confirmation'%>
    </div>
    <%= f.submit btn_msg, class: "btn #{ btn_type } btn-block" %>
<% end %>

