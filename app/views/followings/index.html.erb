<h1 class="text-center text-light p-2">Following</h1>
<hr />
<div class="row mt-3">
    <% if !@follow_users.blank? %>
        <% @follow_users.each do |follow_user| %>
            <div class="col-lg-6 mb-3">
                <div class="media bg-light w-75">
                    <div class="mr-3 border">
                        <%= link_to gravatar_for(follow_user) %>
                    </div>
                    <div class="media-body mt-2 flort-right">
                        <h5><%= link_to follow_user.name, user_path(follow_user), style: "color: violet;" %></h5>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <h3 class="d-block mx-auto text-light">Let's follow someone</h3>
    <% end %> 
</div>
<div class="pagenate text-center border-top pt-3">
    <%= will_paginate @follow_users if !@follow_users.blank? %>
</div> 
<%= link_to "Back", user_path(@user), class: 'btn btn-light' %> 


