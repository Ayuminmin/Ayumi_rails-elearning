<h1 class="text-center text-light p-2">Follow</h1>
<hr />
<div class="row mt-3">
    <% if !@followed_users.blank? %>
        <% @followed_users.each do |followed_user| %>
            <div class="col-lg-6 mb-3">
                <div class="media bg-light w-75">
                    <div class="mr-3 border">
                        <%= link_to gravatar_for(followed_user) %>
                    </div>
                    <div class="media-body mt-2 flort-right">
                        <h5><%= link_to followed_user.name, user_path(followed_user), style: "color: pink;" %></h5>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <h3 class="d-block mx-auto text-light">No one found.</h3>
    <% end %> 
</div>
<div class="pagenate text-center border-top pt-3">
    <%= will_paginate @followed_users if !@ffollowed_users.blank? %>
</div>  
<%= link_to "Back", user_path(@user), class: 'btn btn-light' %>


