<div class="row">
    <div class="col-lg-6 offset-3">
        <h1 class="text-light text-center">Add Category</h1>
        <hr />
        <%= form_for @category, url: admin_categories_path do |f| %>
            <%= render 'shared/errors_messages', object: f.object  %>
                <div class="form-group">
                    <%= f.label :title, class: 'text-light' %>
                    <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :description, class: 'text-light' %>
                    <%= f.text_area :description, class: 'form-control' %> 
                </div>
                <%= f.submit "Add category", class: 'btn btn-info btn-block' %>
        <% end %>
    </div>
</div>

