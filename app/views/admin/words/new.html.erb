<h1 class="text-center p-4 mb-3">Add Word</h1>
<hr />
<%= form_for @word, url: admin_words_path do |f| %>
    <div class="form-row">
        <div class="col">
            <%= render 'shared/errors_messages', object: f.object %> 
            <div class="form-group">
                <%= f.label :Word %>
                <%= f.text_field :content, class: 'form-control' %>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <%= f.label :Choices %>
                <%= f.text_field :content, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.text_field :content, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.text_field :content, class: 'form-control' %>
            </div>
            <%= f.submit "Add category", class: 'btn btn-info btn-block' %>
        </div>
    </div>
<% end %>





